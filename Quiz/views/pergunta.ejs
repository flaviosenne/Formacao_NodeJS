<%- include ('partials/header.ejs') %>

<body>
    <%- include ('partials/navbar.ejs') %>

    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %> </h1>
        <p><%= pergunta.descricao %> </p>
        <hr>
        <form action="/responder" method="POST">
            <h3>Responda</h3>
            <label for="">Resposta</label>
            <input type="hidden" name = 'pergunta' value = '<%=pergunta.id%>'>
            <textarea placeholder="Digite sua Resposta" name = 'corpo' class= 'form-control'></textarea>
            <br>
            <button type = 'submit'class="btn btn-success">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% resposta.forEach(resposta => { %>
            <div class="card">
                <div class="card-body">
                    <%= resposta.corpo %> <br>
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>