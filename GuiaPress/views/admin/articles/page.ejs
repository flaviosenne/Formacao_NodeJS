<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/homenavbar.ejs') %>

<body>
    <div class="container">
        <hr>
        <% result.articles.rows.forEach(article => {%>
            <div class="card">
                <div class="card-header">
                    <h2><%=article.title%></h2>
                </div>
                <br>
                <div class="card-body">
                    <a href="<%=article.slug%>" class="btn btn-success"> Ler artigo</a>
                </div>
            </div>
        <% }) %>

        <div class="row">
            <div class="cl col-12">
                 <% if(result.page > 1)  {%>
                    <a style = 'float: left;'href="/articles/page/<%=result.page-1%>"><<< Anterior</a>
                    
                    <%} else if(result.page == 1) {%>
                        <a style = 'float: left;'href="/"><<< Anterior</a>


                <%} %>
                <% if(result.next){ %> 
                    <a style = 'float: right;'href="/articles/page/<%=result.page+1%>">Proximo >>></a>
                <%} %>
            </div>
            <hr>
        </div>
    </div>
    </div>
</body>
